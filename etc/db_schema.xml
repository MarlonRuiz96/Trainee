<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="wk_grid_records" resource="default" engine="innodb" comment="Grid Records Table">
        <column xsi:type="int" name="entity_id" nullable="false" unsigned="true" identity="true" comment="Grid Record ID"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Title"/>
        <column xsi:type="text" name="content" nullable="false" comment="Post"/>
        <column xsi:type="timestamp" name="publish_date" nullable="true" comment="Publish Date"/>
        <column xsi:type="smallint" name="is_active" nullable="true" comment="Active Status"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Creation Time"/>
        <column xsi:type="timestamp" name="update_time" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Modification Time"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <index referenceId="WK_GRID_RECORDS_ACTIVE_INDEX" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>
</schema>
